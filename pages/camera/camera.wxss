page{
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-body{
  padding: 20rpx 0;
}

.page-body-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.btn-area{
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}
.button5 {
  border-radius: 20px; 
  background-color:#ff0000;
  width:20rpx;
  height:20rpx;
  margin-left: 10rpx;
}

.camera-body{
  width: 100%; 
  height: 300px;
}
.flex-wrp-row_show {
  flex: 1; /* 重要 */
  align-items:center;
  display: flex;
  flex-direction: row;
}
.flex-wrp-row_hide {
  display: none;
  flex: 1; /* 重要 */
  align-items:center;
  flex-direction: row;
}
.view_show{
  display: block;
}
.view_hide{
  display: none;
}

