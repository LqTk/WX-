/* pages/shoping/shopping.wxss */
.list{
  margin-top: 20rpx;
}
.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}
.list .list_item{
  margin-top: 10rpx;
  padding: 10rpx;
  height:120rpx;
  width: 100%;
  border-bottom: 1prx solid #e8e8e8;
}
.list .list_item .img{
  float: left;
  width: 20%;
  height: 100%;
}
.list .list_item .img image{
  width: 100%;
  height: 100%;
}
.list .list_item .info{
  width: 80%;
  float: right;
  height: 100rpx;
  position: relative;
}
.list .list_item .info .title{
  color: #333;
  margin-top: 10rpx;
  margin-left: 10rpx;
  font-size: 15rpx;
} 

.list .list_item .info .price{
  color:#FF2727;
  margin-left:10rpx;
  margin-top:10rpx;
  font-size:15rpx;
}
.list .list_item .info .num{
  position: absolute;
  left: 0px;
  bottom: 10rpx;
  color:#747474;
  margin-left: 10rpx;
  font-size: 15rpx;
}
.view_dis{
  display: inline
}